<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h4>Encontrar remision</h4>
        <hr>
      </div>
      <div class="panel-body">
        <%= form_with(url: "/quantity", method: "get") do %>
          <%= label_tag(:id, "Remision ID:") %>
          <%= text_field_tag :id, nil, {required: true} %>
          <%= submit_tag "Buscar", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row" id="quantity">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h4>Remision</h4>
        <hr>
      </div>
      <div class="panel-body">
        <%= form_with(url: "/quantity", method: "get") do |form| %>
          <div class="field">
            <%= form.label :cantidad_real_etregada %>
            <%= form.number_field :cantidad_real_etregada %>
          </div>

          <div class="custom-file">
            <input type="file" class="custom-file-input" id="validatedCustomFile" required>
            <!-- <label class="custom-file-label" for="validatedCustomFile">Choose file...</label> -->
          </div>

          <%= form.submit "Guardar", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
