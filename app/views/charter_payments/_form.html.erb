<%= form_with(model: charter_payment, local: true) do |form| %>
  <% if charter_payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(charter_payment.errors.count, "error") %> prohibited this charter_payment from being saved:</h2>

      <ul>
      <% charter_payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :fletera %>
    <%= form.select :charter_id, Charter.all.collect { |p| [ "#{p.alias}", p.id ] }, {:prompt => 'Elige Fletera'}, {:required => true} %>
  </div>

  <div class="field">
    <%= form.label :cantidad %>
    <%= form.number_field :cantidad, id: :charter_payment_cantidad,  step: :any %>
  </div>

  <div class="field">
    <%= form.label :fecha %>
    <%= form.text_field :fecha, id: :charter_payment_fecha, placeholder: 'Elige Fecha' %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<script>
  $( function() {
    $( "#charter_payment_fecha" ).datepicker({
      dateFormat: 'dd.mm.yy',
      dayNamesMin: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sa'],
      monthNames: [ 'enero', 'febrero', 'marzo', 'abril', 'mayo', 'junio', 'julio', 'agosto', 'septiembre', 'octubure', 'noviembre', 'diciembre' ],
      firstDay: 1,
    });
  });
</script>
