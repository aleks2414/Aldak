<div class="row">
  <div class="col-md-12">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h4>Users</h4>
        <hr>
      </div>
      <div class="panel-body">
       <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Email</th>
              <th>Nombre</th>
              <th>Papel</th>
              <th>Compania</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.nombre %></td>
              <td><%= user.role %></td>
              <td><%= user.company.name %></td>
              <td><%= link_to 'Editar', edit_user_path(user) %></td>
              <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>       
    </div>
  </div>
</div>
</div>

<div class="row">
  <div class="center">
    <% unless @users.blank? %>
    <%= will_paginate @users %>
    <% end %>
  </div>
</div>
