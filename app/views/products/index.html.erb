<div class="row">
  <div class="col-md-12">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h4>Buscar Productos</h4>
        <hr>
      </div>
      <div class="panel-body">
 <%= search_form_for @q do |f| %>
      <div class="row">
      <div class="col-md-12">
        <label>Cliente:</label>
        <%= f.search_field :nombre_or_codigo_producto_or_alias_or_costo_producto_cont, placeholder: "Buscar producto por nombre, código de producto, costo o alias"  %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= f.submit "Buscar", class: "btn btn-primary" %>
      </div>
      </div>    
    <% end %>       
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h4>Productos</h4>
        <hr>
      </div>
      <div class="panel-body">
       <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              
              <th>Nombre</th>
              <th>Codigo producto</th>
              <th>Caracteristicas</th>
              <% if can? :manage, Product %>
                <th colspan="3"></th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |product| %>
            <tr class='clickable-row' style='cursor: pointer;' data-href='<%= product_url(product) %>'>
              
              <td><%= product.nombre %></td>
              <td><%= product.codigo_producto %></td>
              <td><%= product.caracteristicas %></td>
              <% if can? :manage, Product %>
                <td><%= link_to 'Ver más', product %></td>
                <td><%= link_to 'Editar', edit_product_path(product) %></td>
                <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>       
    </div>
  </div>
</div>
</div>

<div class="row">
  <div class="center">
    <% unless @products.blank? %>
    <%= will_paginate @products %>
    <% end %>
  </div>
</div>