<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
  <div class="col-md-6">
  <div class="field">
    <%= form.label :nombre_del_producto %>
    <%= form.text_field :nombre, id: :product_nombre, required:true %>
  </div>
  </div>

  <div class="col-md-6">
  <div class="field">
    <%= form.label :codigo_producto %>
    <%= form.text_field :codigo_producto, id: :product_codigo_producto, required:true %>
  </div>
  </div>
  </div>

  <div class="row">
  <div class="col-md-6">
  <div class="field">
    <%= form.label :costo_del_producto_sin_iva %>
    <%= form.number_field :costo_producto,  step: :any, required:true %>
  </div>
  </div>

  <div class="col-md-6">
  <div class="field">
    <%= form.label :precio_de_venta_sin_iva %>
    <%= form.number_field :precio_de_venta,  step: :any, required:true %>
  </div>
  </div>

  <div class="col-md-6">
  <div class="field">
    <%= form.label :alias %>
    <%= form.text_field :alias, id: :product_codigo_producto, required:true %>
  </div>
  </div>
  </div>

  <div class="field">
    <%= form.label :caracteristicas %>
    <%= form.text_field :caracteristicas, id: :product_caracteristicas %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
