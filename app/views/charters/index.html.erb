<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h3>Fleteras</h3>
        <hr>
      </div>
      <div class="panel-body">
       <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              
              <th>Alias</th>
              <th>Rfc</th>
              <th>Razon social</th>
              <th>Direccion</th>
              <th>Encargado</th>
              <th>Telefono encargado</th>
              <th>Correo encargado</th>
              <th>Codigo fletera</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @charters.each do |charter| %>
            <tr>
              
              <td><%= charter.alias %></td>
              <td><%= charter.rfc %></td>
              <td><%= charter.razon_social %></td>
              <td><%= charter.direccion %></td>
              <td><%= charter.encargado %></td>
              <td><%= charter.telefono_encargado %></td>
              <td><%= charter.correo_encargado %></td>
              <td><%= charter.codigo_fletera %></td>
              <td><%= link_to 'Show', charter %></td>
              <td><%= link_to 'Edit', edit_charter_path(charter) %></td>
              <td><%= link_to 'Destroy', charter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>       
    </div>
  </div>
</div>
</div>