<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h3><%= @charter.alias %></h3>
      </div>

      <div class="panel-body">
        <p>
          <strong>Razon social:</strong>
          <%= @charter.razon_social %>
        </p>

        <p>
          <strong>Direccion:</strong>
          <%= @charter.direccion %>
        </p>

        <p>
          <strong>Encargado:</strong>
          <%= @charter.encargado %>
        </p>

        <p>
          <strong>Telefono encargado:</strong>
          <%= @charter.telefono_encargado %>
        </p>

        <p>
          <strong>Correo encargado:</strong>
          <%= @charter.correo_encargado %>
        </p>

        <p>
          <strong>Codigo fletera:</strong>
          <%= @charter.codigo_fletera %>
        </p>

      </div>

    </div>
  </div>
</div>



<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h3>Saldos</h3>
      </div>
      <div class="panel-body">
      <div class="row">
        <div class="col-md-6">

      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Cargos</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
          
        </div>
        <div class="col-md-6">

      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Abonos</th>
            </tr>
          </thead>
          <tbody>
            <% @charter.services.each do |service| %>
            <tr>
              <td><%= number_to_currency service.charter.precio_de_envio %></td>
            </tr>
            <% end %>
            <tr>
              <td></td>
            </tr>
            <tr>
              <td></td>
            </tr>
            <tr>
              <td><strong>Total:</strong> <%= number_to_currency @charter.services.map(&:charter).map(&:precio_de_envio).sum %></td>
            </tr>
          </tbody>
        </table>
      </div>
          
        </div>
      </div>
      </div>
    </div>
  </div>
</div>

