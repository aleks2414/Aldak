<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h3><%= @provider.alias %></h3>
      </div>
      <div class="panel-body">
<p>
  <strong>Razon social:</strong>
  <%= @provider.razon_social %>
</p>

<p>
  <strong>Direccion:</strong>
  <%= @provider.direccion %>
</p>

<p>
  <strong>Contacto:</strong>
  <%= @provider.encargado %>
</p>

<p>
  <strong>Telefono encargado:</strong>
  <%= @provider.telefono_encargado %>
</p>

<p>
  <strong>Correo encargado:</strong>
  <%= @provider.correo_encargado %>
</p>

<p>
  <strong>Codigo proveedor:</strong>
  <%= @provider.codigo_proveedor %>
</p>

      </div>
      
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h3>Saldos</h3>
      </div>
      <div class="panel-body">
      <div class="row">
        <div class="col-md-5">

      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Pagos</th>
              <th></th>
            </tr>

            <tr>
              <th></th>
              <th>Fecha</th>
            </tr>
          </thead>
          <tbody>
            <% @provider.provider_payments.each do |payment| %>
            <tr>
              <td><%= number_to_currency payment.cantidad %></td>
              <td><%= payment.fecha %></td>
            </tr>
            <% end %>
            <tr>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td><strong>Total:</strong><%= number_to_currency @n1 = @provider.provider_payments.map(&:cantidad).sum %></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
          
        </div>
        <div class="col-md-7">

      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Ventas</th>
              <th></th>
            </tr>
            <tr>
              <th>Código de Remisión</th>
              <th></th>
            
            </tr>
          </thead>
          <tbody>
            <% @provider.services.each do |service| %>
            <tr>
              <td><%= link_to  "#{service.codigo_remision}", etapa_1_service_path(service)%></td>
              <td><%= number_to_currency service.pago_a_proveedor %></td>
              
            </tr>
            <% end %>
            <tr>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td><strong>Total:</strong> <%= number_to_currency @n2 = @provider.services.map(&:pago_a_proveedor).sum %></td>
            </tr>
          </tbody>
        </table>
      </div>
          
        </div>
      </div>

<h2>Saldo: <%= number_to_currency @n1 - @n2 %></h2>

      </div>
    </div>
  </div>
</div>



