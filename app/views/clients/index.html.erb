  
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h4>Buscar clientes</h4>
        <hr>
      </div>
      <div class="panel-body">
 <%= search_form_for @q do |f| %>
      <div class="row">
      <div class="col-md-12">
        <label>Cliente:</label>
        <%= f.search_field :razon_social_or_rfc_or_alias_cont, placeholder: "Buscar cliente por Razón Social, R.F.C o alias"  %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= f.submit "Buscar", class: "btn btn-primary" %>
      </div>
      </div>    
    <% end %>       
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h4>Clientes</h4>
        <hr>
      </div>
      <div class="panel-body">
       <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              
              <th>Alias</th>
              <th>Rfc</th>
              <th>Razon social</th>
              <th>Direccion</th>
              <th>Planta</th>
              <th>Codigo empresa</th>
              <th>Codigo planta</th>
              <th>Numero proveedor</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @clients.each do |client| %>
            <tr>
              
              <td><%= client.alias %></td>
              <td><%= client.rfc %></td>
              <td><%= client.razon_social %></td>
              <td><%= client.direccion.truncate(50) %></td>
              <td><%= client.planta %></td>
              <td><%= client.codigo_empresa %></td>
              <td><%= client.codigo_planta %></td>
              <td><%= client.numero_proveedor %></td>
              <td><%= link_to 'Ver más', client %></td>
              <td><%= link_to 'Editar', edit_client_path(client) %></td>
              <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>       
    </div>
  </div>
</div>
</div>

<div class="row">
  <div class="center">
    <% unless @clients.blank? %>
    <%= will_paginate @clients %>
    <% end %>
  </div>
</div>